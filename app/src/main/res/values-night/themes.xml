<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.HealthTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="Theme.CS4084_Group_01" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorSurfaceVariant">#1F1F1F</item>
        <item name="colorOnSurfaceVariant">#E0E0E0</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">#FFFFFF</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorErrorContainer">@color/error_color</item>
        <item name="colorOnErrorContainer">#FFFFFF</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/secondary_text_night</item>
        
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/dark_background</item>
        
        <!-- Material components customization -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Dark</item>
        <item name="bottomAppBarStyle">@style/Widget.App.BottomAppBar.Dark</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton.Dark</item>
    </style>
    
    <!-- Dark theme card style -->
    <style name="Widget.App.CardView.Dark" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/dark_card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
    
    <!-- Dark theme bottom app bar style -->
    <style name="Widget.App.BottomAppBar.Dark" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">@color/dark_surface</item>
        <item name="elevation">8dp</item>
    </style>
    
    <!-- Dark theme floating action button style -->
    <style name="Widget.App.FloatingActionButton.Dark" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/purple_200</item>
        <item name="tint">@color/white</item>
    </style>
</resources>